#!/usr/bin/env node

/**
 * Module dependencies.
 */
var app = require('../app');
var httpApp = require('../app');
var debug = require('debug')('webapp:server');
var http = require('http');
var https = require('https');
var fs = require('fs');

var options = {
  key: fs.readFileSync('./srv/www/ssl/key.pem'),
  cert: fs.readFileSync('./srv/www/ssl/cert.crt'),
  bundle: fs.readFileSync('./srv/www/ssl/bundle.ca-bundle')
};

/**
 * Get port from environment and store in Express.
 */
var port = normalizePort(process.env.PORT || '4300');
var httpPort = normalizePort(process.env.PORT || '3000');
app.set('port', port);
httpApp.set('port', httpPort);

/**
 * Create HTTP server.
 */
var server = https.createServer(options, app);
var httpServer = http.createServer(httpApp);
var https
var http

/**
 * Listen on provided port, on all network interfaces.
 */
server.listen(port, function() {
  debug('HTTPS Server listening on port: ' + app.get('port'));
});

httpServer.listen(httpPort, function() {
  debug('HTTP Server listening on port: ' + httpApp.get('port'));
});
//httpServer.on('error', onError);
//httpServer.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}